// Types
interface UseCase {
  id: number;
  title: string;
  status: 'Active' | 'Paused' | 'Testing';
  agents: number;
}

interface Agent {
  id: number;
  title: string;
  type: 'Orchestra' | 'Worker';
  version: string;
}

interface Message {
  id: number;
  type: 'user' | 'ai';
  content: string;
  timestamp: Date;
}

