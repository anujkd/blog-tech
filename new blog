  }
`;

// Chat Component
const ChatPage: React.FC = () => {
  const [chatInput, setChatInput] = useState('');
  const [messages, setMessages] = useState<Message[]>([]);
  const [showWelcome, setShowWelcome] = useState(true);

  const suggestions = [
    { icon: <Sparkles size={20} />, title: 'Create Use Case', text: 'Build a new AI use case' },
    { icon: <MessageSquare size={20} />, title: 'Analyze Data', text: 'Get insights from your data' },
    { icon: <Eye size={20} />, title: 'Monitor Agents', text: 'Track agent performance' },
    { icon: <CheckCircle size={20} />, title: 'Generate Report', text: 'Create detailed reports' }
  ];

  const handleSendMessage = () => {
    if (chatInput.trim()) {
      const newMessage: Message = {
        id: messages.length + 1,
        type: 'user',
        content: chatInput,
        timestamp: new Date()
      };
      
      setMessages([...messages, newMessage]);
      setChatInput('');
      setShowWelcome(false);
      
      // Simulate AI response
      setTimeout(() => {
        const aiResponse: Message = {
          id: messages.length + 2,
          type: 'ai',
          content: 'I understand your question. Let me help you with that. Here are some recommendations based on your query...',
          timestamp: new Date()
        };
        setMessages(prev => [...prev, aiResponse]);
      }, 1000);
    }
  };

  const handleSuggestionClick = (suggestion: string) => {
    setChatInput(suggestion);
  };

  const handleStartNewChat = () => {
    setMessages([]);
    setShowWelcome(true);
    setChatInput('');
  };

  return (
    <ChatContainer>
      <WelcomeSection $show={showWelcome}>
        <WelcomeTitle>Welcome back to Agentic Portal</WelcomeTitle>
        <WelcomeSubtitle>
          Your intelligent workspace for managing AI agents and use cases
        </WelcomeSubtitle>
        <WelcomeText>
          Streamline your workflow with powerful AI-driven automation
        </WelcomeText>
        
        <GreetingBox>
          <GreetingIcon>
            <MessageSquare size={24} />
          </GreetingIcon>
          <GreetingText>Hi, how can I help?</GreetingText>
        </GreetingBox>
        
        <SuggestionsGrid>
          {suggestions.map((sug, idx) => (
            <SuggestionCard key={idx} onClick={() => handleSuggestionClick(sug.title)}>
              <SuggestionIcon>{sug.icon}</SuggestionIcon>
              <SuggestionText>
                <h4>{sug.title}</h4>
                <p>{sug.text}</p>
              </SuggestionText>
            </SuggestionCard>
          ))}
        </SuggestionsGrid>
      </WelcomeSection>
      
      {!showWelcome && (
        <ChatHistory>
          {messages.map((msg) => (
            <MessageRow key={msg.id} $align={msg.type === 'user' ? 'right' : 'left'}>
              <MessageBubble $type={msg.type}>
                {msg.type === 'ai' && messages[messages.length - 1].id === msg.id && (
                  <ThinkingLoader>AI is thinking</ThinkingLoader>
                )}
                {msg.content}
                <MessageActions>
                  {msg.type === 'user' ? (
                    <IconButton $user>
                      <Edit2 size={14} />
                    </IconButton>
                  ) : (
                    <>
                      <IconButton title="Copy">
                        <Copy size={14} />
                      </IconButton>
                      <IconButton title="Regenerate">
                        <RefreshCw size={14} />
                      </IconButton>
                    </>
                  )}
                </MessageActions>
              </MessageBubble>
            </MessageRow>
          ))}
        </ChatHistory>
      )}
      
      <InputContainer $showStartNew={!showWelcome}>
        {!showWelcome && (
          <StartNewChat onClick={handleStartNewChat}>
            <Sparkles size={16} />
            Start New Chat
          </StartNewChat>
        )}
        <TextAreaWrapper>
          <TextArea
            placeholder="Type your message here..."
            value={chatInput}
            onChange={(e) => setChatInput(e.target.value)}
            onKeyPress={(e) => {
              if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                handleSendMessage();
              }
            }}
          />
          <SendButton onClick={handleSendMessage} disabled={!chatInput.trim()}>
            <Send size={20} />
          </SendButton>
        </TextAreaWrapper>
      </InputContainer>
    </ChatContainer>
  );
};

// Main App Component
const App: React.FC = () => {
  const [sidebarOpen, setSidebarOpen] = useState(true);
  const [activePage, setActivePage] = useState('home');
  const [expandedMenus, setExpandedMenus] = useState({ envoy: true, cortex: false, tools: false, atlas: false });

  const toggleMenu = (menu: keyof typeof expandedMenus) => {
    setExpandedMenus(prev => ({ ...prev, [menu]: !prev[menu] }));
  };

  return (
    <AppContainer>
      <Header $sidebarOpen={sidebarOpen}>
        <MenuButton onClick={() => setSidebarOpen(!sidebarOpen)}>
          {sidebarOpen ? <X size={24} /> : <Menu size={24} />}
        </MenuButton>
        <Logo>Lloyds Agentic Portal</Logo>
      </Header>
      
      <Sidebar $open={sidebarOpen}>
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('envoy')}>
            <span>Envoy</span>
            {expandedMenus.envoy ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.envoy}>
            <SubMenuItem $active={activePage === 'use-cases'} onClick={() => setActivePage('use-cases')}>
              Use Cases
            </SubMenuItem>
            <SubMenuItem $active={activePage === 'agents'} onClick={() => setActivePage('agents')}>
              AI Agents
            </SubMenuItem>
            <SubMenuItem>Monitor</SubMenuItem>
          </SubMenu>
        </MenuSection>
        
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('cortex')}>
            <span>Cortex (LLM)</span>
            {expandedMenus.cortex ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.cortex}>
            <SubMenuItem>View</SubMenuItem>
            <SubMenuItem>Evaluate</SubMenuItem>
            <SubMenuItem>Monitor</SubMenuItem>
            <SubMenuItem>Guardrails</SubMenuItem>
          </SubMenu>
        </MenuSection>
        
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('tools')}>
            <span>Tools</span>
            {expandedMenus.tools ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.tools}>
            <SubMenuItem>View</SubMenuItem>
          </SubMenu>
        </MenuSection>
        
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('atlas')}>
            <span>Atlas (ML)</span>
            {expandedMenus.atlas ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.atlas}>
            <SubMenuItem>Use Cases</SubMenuItem>
            <SubMenuItem>Model</SubMenuItem>
            <SubMenuItem>Monitor</SubMenuItem>
          </SubMenu>
        </MenuSection>
      </Sidebar>
      
      <MainContent $sidebarOpen={sidebarOpen}>
        <ChatPage />
      </MainContent>
    </AppContainer>
  );
};

export default App;