// Sidebar Component
interface SidebarProps {
  isOpen: boolean;
}

const Sidebar: React.FC<SidebarProps> = ({ isOpen }) => {
  const location = useLocation();
  const [expandedMenus, setExpandedMenus] = useState({
    envoy: true,
    cortex: false,
    tools: false,
    atlas: false
  });

  const toggleMenu = (menu: keyof typeof expandedMenus) => {
    setExpandedMenus(prev => ({ ...prev, [menu]: !prev[menu] }));
  };

  const isActive = (path: string) => location.pathname === path;

  return (
    <SidebarContainer $open={isOpen}>
      <MenuSection>
        <MenuTitle onClick={() => toggleMenu('envoy')}>
          <span>Envoy</span>
          {expandedMenus.envoy ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
        </MenuTitle>
        <SubMenu $open={expandedMenus.envoy}>
          <StyledLink to="/use-cases">
            <SubMenuItem $active={isActive('/use-cases')}>
              Use Cases
            </SubMenuItem>
          </StyledLink>
          <StyledLink to="/agents">
            <SubMenuItem $active={isActive('/agents')}>
              AI Agents
            </SubMenuItem>
          </StyledLink>
          <SubMenuItem>Monitor</SubMenuItem>
        </SubMenu>
      </MenuSection>
      
      <MenuSection>
        <MenuTitle onClick={() => toggleMenu('cortex')}>
          <span>Cortex (LLM)</span>
          {expandedMenus.cortex ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
        </MenuTitle>
        <SubMenu $open={expandedMenus.cortex}>
          <SubMenuItem>View</SubMenuItem>
          <SubMenuItem>Evaluate</SubMenuItem>
          <SubMenuItem>Monitor</SubMenuItem>
          <SubMenuItem>Guardrails</SubMenuItem>
        </SubMenu>
      </MenuSection>
      
      <MenuSection>
        <MenuTitle onClick={() => toggleMenu('tools')}>
          <span>Tools</span>
          {expandedMenus.tools ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
        </MenuTitle>
        <SubMenu $open={expandedMenus.tools}>
          <SubMenuItem>View</SubMenuItem>
        </SubMenu>
      </MenuSection>
      
      <MenuSection>
        <MenuTitle onClick={() => toggleMenu('atlas')}>
          <span>Atlas (ML)</span>
          {expandedMenus.atlas ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
        </MenuTitle>
        <SubMenu $open={expandedMenus.atlas}>
          <SubMenuItem>Use Cases</SubMenuItem>
          <SubMenuItem>Model</SubMenuItem>
          <SubMenuItem>Monitor</SubMenuItem>
        </SubMenu>
      </MenuSection>
    </SidebarContainer>
  );
};

// Chat Page Component
const ChatPage: React.FC = () => {
  const [chatInput, setChatInput] = useState('');
  const [messages, setMessages] = useState<Message[]>([]);
  const [showWelcome, setShowWelcome] = useState(true);

  const suggestions = [
    { icon: <Sparkles size={20} />, title: 'Create Use Case', text: 'Build a new AI use case' },
    { icon: <MessageSquare size={20} />, title: 'Analyze Data', text: 'Get insights from your data' },
    { icon: <Eye size={20} />, title: 'Monitor Agents', text: 'Track agent performance' },
    { icon: <CheckCircle size={20} />, title: 'Generate Report', text: 'Create detailed reports' }
  ];

  const handleSendMessage = () => {
    if (chatInput.trim()) {
      const newMessage: Message = {
        id: messages.length + 1,
        type: 'user',
        content: chatInput,
        timestamp: new Date()
      };
      
      setMessages([...messages, newMessage]);
      setChatInput('');
      setShowWelcome(false);
      
      setTimeout(() => {
        const aiResponse: Message = {
          id: messages.length + 2,
          type: 'ai',
          content: 'I understand your question. Let me help you with that. Here are some comprehensive recommendations based on your query and the best practices in the industry.',
          timestamp: new Date()
        };
        setMessages(prev => [...prev, aiResponse]);
      }, 1000);
    }
  };

  const handleSuggestionClick = (suggestion: string) => {
    setChatInput(suggestion);
  };

  const handleStartNewChat = () => {
    setMessages([]);
    setShowWelcome(true);
    setChatInput('');
  };

  return (
    <ChatContainer>
      <WelcomeSection $show={showWelcome}>
        <WelcomeTitle>Welcome back to Agentic Portal</WelcomeTitle>
        <WelcomeSubtitle>
          Your intelligent workspace for managing AI agents and use cases
        </WelcomeSubtitle>
        <WelcomeText>
          Streamline your workflow with powerful AI-driven automation
        </WelcomeText>
        
        <GreetingBox>
          <GreetingIcon>
            <MessageSquare size={24} />
          </GreetingIcon>
          <GreetingText>Hi, how can I help?</GreetingText>
        </GreetingBox>
        
        <SuggestionsGrid>
          {suggestions.map((sug, idx) => (
            <SuggestionCard key={idx} onClick={() => handleSuggestionClick(sug.title)}>
              <SuggestionIcon>{sug.icon}</SuggestionIcon>
              <SuggestionText>
                <h4>{sug.title}</h4>
                <p>{sug.text}</p>
              </SuggestionText>
            </SuggestionCard>
          ))}
        </SuggestionsGrid>
      </WelcomeSection>
      
      {!showWelcome && (
        <ChatHistory>
          {messages.map((msg) => (
            <MessageRow key={msg.id} $align={msg.type === 'user' ? 'right' : 'left'}>
              <MessageBubble $type={msg.type}>
                {msg.type === 'ai' && messages[messages.length - 1].id === msg.id && (
                  <ThinkingLoader>AI is thinking</ThinkingLoader>
                )}
                {msg.content}
                <MessageActions>
                  {msg.type === 'user' ? (
                    <IconButton $user>
                      <Edit2 size={14} />
                    </IconButton>
                  ) : (
                    <>
                      <IconButton title="Copy">
                        <Copy size={14} />
                      </IconButton>
                      <IconButton title="Regenerate">
                        <RefreshCw size={14} />
                      </IconButton>
                    </>
                  )}
                </MessageActions>
              </MessageBubble>
            </MessageRow>
          ))}
        </ChatHistory>
      )}
      
      <InputContainer $showStartNew={!showWelcome}>
        {!showWelcome && (
          <StartNewChat onClick={handleStartNewChat}>
            <Sparkles size={16} />
            Start New Chat
          </StartNewChat>
        )}
        <TextAreaWrapper>
          <TextArea
            placeholder="Type your message here..."
            value={chatInput}
            onChange={(e) => setChatInput(e.target.value)}
            onKeyPress={(e) => {
              if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                handleSendMessage();
              }
            }}
          />
          <SendButton onClick={handleSendMessage} disabled={!chatInput.trim()}>
            <Send size={20} />
          </SendButton>
        </TextAreaWrapper>
      </InputContainer>
    </ChatContainer>
  );
};

// Use Cases Page Component
const UseCasesPage: React.FC = () => {
  const [useCases] = useState<UseCase[]>([
    { id: 1, title: 'Customer Support Bot', status: 'Active', agents: 3 },
    { id: 2, title: 'Sales Assistant', status: 'Paused', agents: 2 },
    { id: 3, title: 'HR Automation', status: 'Active', agents: 4 },
    { id: 4, title: 'Data Analyzer', status: 'Testing', agents: 1 },
    { id: 5, title: 'Content Generator', status: 'Active', agents: 2 },
  ]);

  return (
    <>
      <TopBar>
        <PageHeader>
          <PageTitle>Use Cases</PageTitle>
          <PageSubtitle>Manage your AI-powered use cases</PageSubtitle>
        </PageHeader>
        <Button>+ Add New Use Case</Button>
      </TopBar>
      
      <TableContainer>
        <Table>
          <thead>
            <tr>
              <Th>Title</Th>
              <Th>Status</Th>
              <Th>Agents</Th>
              <Th>Actions</Th>
            </tr>
          </thead>
          <tbody>
            {useCases.map(uc => (
              <Tr key={uc.id}>
                <Td><strong>{uc.title}</strong></Td>
                <Td><StatusBadge $status={uc.status}>{uc.status}</StatusBadge></Td>
                <Td>{uc.agents} agents</Td>
                <Td>
                  <ActionButtons>
                    <SmallButton $variant="danger" title="Delete">
                      <Trash2 size={14} />
                    </SmallButton>
                    <SmallButton title="View">
                      <Eye size={14} />
                    </SmallButton>
                    <SmallButton $variant="info" title="Monitor">
                      <Monitor size={14} />
                    </SmallButton>
                    <SmallButton $variant="warning" title="Try">
                      <Play size={14} />
                    </SmallButton>
                    <SmallButton $variant="warning" title="Pause">
                      <Pause size={14} />
                    </SmallButton>
                    <SmallButton $variant="success" title="Publish">
                      <CheckCircle size={14} />
                    </SmallButton>
                  </ActionButtons>
                </Td>
              </Tr>
            ))}
          </tbody>
        </Table>
      </TableContainer>
    </>
  );
};

// Agents Page Component
const AgentsPage: React.FC = () => {
  const [agents] = useState<Agent[]>([
    { id: 1, title: 'Support Agent V1', type: 'Orchestra', version: '1.2.0' },
    { id: 2, title: 'Sales Agent Pro', type: 'Worker', version: '2.0.1' },
    { id: 3, title: 'HR Helper', type: 'Orchestra', version: '1.5.3' },
    { id: 4, title: 'Analytics Agent', type: 'Worker', version: '1.0.0' },
    { id: 5, title: 'Content Writer', type: 'Orchestra', version: '2.1.0' },
  ]);

  return (
    <>
      <TopBar>
        <PageHeader>
          <PageTitle>AI Agents</PageTitle>
          <PageSubtitle>Manage your intelligent agents</PageSubtitle>
        </PageHeader>
        <Button>+ Add New Agent</Button>
      </TopBar>
      
      <TableContainer>
        <Table>
          <thead>
            <tr>
              <Th>Title</Th>
              <Th>Type</Th>
              <Th>Version</Th>
              <Th>Actions</Th>
            </tr>
          </thead>
          <tbody>
            {agents.map(agent => (
              <Tr key={agent.id}>
                <Td><strong>{agent.title}</strong></Td>
                <Td>{agent.type}</Td>
                <Td><StatusBadge $status="Active">v{agent.version}</StatusBadge></Td>
                <Td>
                  <ActionButtons>
                    <SmallButton title="View Details">
                      <Eye size={14} /> View
                    </SmallButton>
                    <SmallButton $variant="success" title="Add to Use Case">
                      + Add to Use Case
                    </SmallButton>
                  </ActionButtons>
                </Td>
              </Tr>
            ))}
          </tbody>
        </Table>
      </TableContainer>
    </>
  );
};

// Layout Component
const Layout: React.FC = () => {
  const [sidebarOpen, setSidebarOpen] = useState(true);

  return (
    <AppContainer>
      <Header $sidebarOpen={sidebarOpen}>
        <MenuButton onClick={() => setSidebarOpen(!sidebarOpen)}>
          {sidebarOpen ? <X size={24} /> : <Menu size={24} />}
        </MenuButton>
        <Logo>Lloyds Agentic Portal</Logo>
      </Header>
      
      <Sidebar isOpen={sidebarOpen} />
      
      <MainContent $sidebarOpen={sidebarOpen}>
        <Routes>
          <Route path="/" element={<ChatPage />} />
          <Route path="/use-cases" element={<UseCasesPage />} />
          <Route path="/agents" element={<AgentsPage />} />
        </Routes>
      </MainContent>
    </AppContainer>
  );
};

// Main App Component
const App: React.FC = () => {
  return (
    <Router>
      <Layout />
    </Router>
  );
};

export default App;