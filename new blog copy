const StatusBadge = styled.span`
  background: ${props => {
    if (props.$status === 'Active') return 'linear-gradient(135deg, #48bb78 0%, #38a169 100%)';
    if (props.$status === 'Paused') return 'linear-gradient(135deg, #ed8936 0%, #dd6b20 100%)';
    if (props.$status === 'Testing') return 'linear-gradient(135deg, #4299e1 0%, #3182ce 100%)';
    return 'linear-gradient(135deg, #f56565 0%, #e53e3e 100%)';
  }};
  color: white;
  padding: 6px 14px;
  border-radius: 16px;
  font-size: 12px;
  font-weight: 600;
  display: inline-block;
`;

function App() {
  const [sidebarOpen, setSidebarOpen] = useState(true);
  const [activePage, setActivePage] = useState('home');
  const [expandedMenus, setExpandedMenus] = useState({ envoy: true });
  const [showUseCaseModal, setShowUseCaseModal] = useState(false);
  const [showAgentModal, setShowAgentModal] = useState(false);
  const [currentPage, setCurrentPage] = useState(1);
  const [titleFilter, setTitleFilter] = useState('');
  const [statusFilter, setStatusFilter] = useState('');
  const [chatInput, setChatInput] = useState('');
  const [showChat, setShowChat] = useState(false);
  
  const [useCases, setUseCases] = useState([
    { id: 1, title: 'Customer Support Bot', status: 'Active', agents: 3 },
    { id: 2, title: 'Sales Assistant', status: 'Paused', agents: 2 },
    { id: 3, title: 'HR Automation', status: 'Active', agents: 4 },
    { id: 4, title: 'Data Analyzer', status: 'Testing', agents: 1 },
    { id: 5, title: 'Content Generator', status: 'Active', agents: 2 },
    { id: 6, title: 'Email Classifier', status: 'Testing', agents: 2 },
    { id: 7, title: 'Sentiment Analysis', status: 'Active', agents: 3 },
  ]);
  
  const [agents, setAgents] = useState([
    { id: 1, title: 'Support Agent V1', type: 'Orchestra', version: '1.2.0' },
    { id: 2, title: 'Sales Agent Pro', type: 'Worker', version: '2.0.1' },
    { id: 3, title: 'HR Helper', type: 'Orchestra', version: '1.5.3' },
    { id: 4, title: 'Analytics Agent', type: 'Worker', version: '1.0.0' },
    { id: 5, title: 'Content Writer', type: 'Orchestra', version: '2.1.0' },
  ]);

  const [newUseCase, setNewUseCase] = useState({
    title: '',
    description: '',
    memory: false,
    serviceLevel: 'standard'
  });

  const [newAgent, setNewAgent] = useState({
    title: '',
    description: ''
  });

  const itemsPerPage = 5;

  const toggleMenu = (menu) => {
    setExpandedMenus(prev => ({ ...prev, [menu]: !prev[menu] }));
  };

  const handleAddUseCase = () => {
    if (newUseCase.title) {
      setUseCases([...useCases, {
        id: useCases.length + 1,
        title: newUseCase.title,
        status: 'Testing',
        agents: 0
      }]);
      setNewUseCase({ title: '', description: '', memory: false, serviceLevel: 'standard' });
      setShowUseCaseModal(false);
    }
  };

  const handleAddAgent = () => {
    if (newAgent.title) {
      setAgents([...agents, {
        id: agents.length + 1,
        title: newAgent.title,
        type: 'Orchestra',
        version: '1.0.0'
      }]);
      setNewAgent({ title: '', description: '' });
      setShowAgentModal(false);
    }
  };

  const handleDeleteUseCase = (id) => {
    setUseCases(useCases.filter(uc => uc.id !== id));
  };

  const handleSendMessage = () => {
    if (chatInput.trim()) {
      setShowChat(true);
      setChatInput('');
    }
  };

  const filteredUseCases = useCases.filter(uc => {
    const matchesTitle = uc.title.toLowerCase().includes(titleFilter.toLowerCase());
    const matchesStatus = statusFilter ? uc.status === statusFilter : true;
    return matchesTitle && matchesStatus;
  });

  const totalPages = Math.ceil(filteredUseCases.length / itemsPerPage);
  const paginatedUseCases = filteredUseCases.slice(
    (currentPage - 1) * itemsPerPage, 
    currentPage * itemsPerPage
  );

  const agentTotalPages = Math.ceil(agents.length / itemsPerPage);
  const paginatedAgents = agents.slice(
    (currentPage - 1) * itemsPerPage, 
    currentPage * itemsPerPage
  );

  const renderHome = () => (
    <ChatContainer>
      <PageHeader>
        <PageTitle>AI Assistant</PageTitle>
        <PageSubtitle>Ask me anything or choose a suggestion below</PageSubtitle>
      </PageHeader>
      
      <Suggestions>
        <SuggestionChip onClick={() => setChatInput('Help me write a professional email')}>
          Help me write an email
        </SuggestionChip>
        <SuggestionChip onClick={() => setChatInput('Analyze customer feedback data')}>
          Analyze this data
        </SuggestionChip>
        <SuggestionChip onClick={() => setChatInput('Generate a quarterly report')}>
          Generate a report
        </SuggestionChip>
        <SuggestionChip onClick={() => setChatInput('Create a summary of recent trends')}>
          Create a summary
        </SuggestionChip>
      </Suggestions>
      
      <InputSection>
        <TextArea 
          placeholder="Type your message here..." 
          value={chatInput}
          onChange={(e) => setChatInput(e.target.value)}
          onKeyPress={(e) => e.key === 'Enter' && !e.shiftKey && (e.preventDefault(), handleSendMessage())}
        />
        <SendButton onClick={handleSendMessage}>
          <Send size={18} />
          Send Message
        </SendButton>
      </InputSection>
      
      {showChat && (
        <ChatHistory>
          <MessageRow $align="right">
            <MessageBubble $type="user">
              How can I improve my customer support workflow?
              <MessageActions>
                <IconButton $user>
                  <Edit2 size={16} />
                </IconButton>
              </MessageActions>
            </MessageBubble>
          </MessageRow>
          
          <MessageRow>
            <MessageBubble>
              <ThinkingLoader>AI is thinking</ThinkingLoader>
              Here are some comprehensive recommendations to improve your customer support workflow:
              
              <br/><br/>
              <strong>1. Implement Automated Ticket Routing</strong><br/>
              Use AI to categorize and route tickets to the right team members based on expertise and availability.
              
              <br/><br/>
              <strong>2. Deploy AI-Powered Chatbots</strong><br/>
              Handle common queries instantly with intelligent chatbots, reducing response time and workload.
              
              <br/><br/>
              <strong>3. Create a Knowledge Base</strong><br/>
              Build a comprehensive self-service portal where customers can find answers quickly.
              
              <br/><br/>
              <strong>4. Set Up SLA Monitoring</strong><br/>
              Track response and resolution times with automated alerts to maintain service quality.
              
              <MessageActions>
                <IconButton title="Copy to clipboard">
                  <Copy size={16} />
                </IconButton>
                <IconButton title="Regenerate response">
                  <RefreshCw size={16} />
                </IconButton>
              </MessageActions>
            </MessageBubble>
          </MessageRow>
        </ChatHistory>
      )}
    </ChatContainer>
  );

  const renderUseCases = () => (
    <>
      <TopBar>
        <PageHeader>
          <PageTitle>Use Cases</PageTitle>
          <PageSubtitle>Manage your AI-powered use cases</PageSubtitle>
        </PageHeader>
        <Button onClick={() => setShowUseCaseModal(true)}>
          + Add New Use Case
        </Button>
      </TopBar>
      
      <TableContainer>
        <FilterBar>
          <Input 
            placeholder="Filter by title..." 
            value={titleFilter}
            onChange={(e) => {
              setTitleFilter(e.target.value);
              setCurrentPage(1);
            }}
          />
          <Select value={statusFilter} onChange={(e) => {
            setStatusFilter(e.target.value);
            setCurrentPage(1);
          }}>
            <option value="">All Status</option>
            <option value="Active">Active</option>
            <option value="Paused">Paused</option>
            <option value="Testing">Testing</option>
          </Select>
        </FilterBar>
        
        <Table>
          <thead>
            <tr>
              <Th>Title</Th>
              <Th>Status</Th>
              <Th>Agents</Th>
              <Th>Actions</Th>
            </tr>
          </thead>
          <tbody>
            {paginatedUseCases.map(uc => (
              <Tr key={uc.id}>
                <Td><strong>{uc.title}</strong></Td>
                <Td><StatusBadge $status={uc.status}>{uc.status}</StatusBadge></Td>
                <Td>{uc.agents} agents</Td>
                <Td>
                  <ActionButtons>
                    <SmallButton $variant="danger" onClick={() => handleDeleteUseCase(uc.id)} title="Delete">
                      <Trash2 size={14} />
                    </SmallButton>
                    <SmallButton title="View">
                      <Eye size={14} />
                    </SmallButton>
                    <SmallButton $variant="info" title="Monitor">
                      <Monitor size={14} />
                    </SmallButton>
                    <SmallButton $variant="warning" title="Try">
                      <Play size={14} />
                    </SmallButton>
                    <SmallButton $variant="warning" title="Pause">
                      <Pause size={14} />
                    </SmallButton>
                    <SmallButton $variant="success" title="Publish">
                      <CheckCircle size={14} /> Publish
                    </SmallButton>
                  </ActionButtons>
                </Td>
              </Tr>
            ))}
          </tbody>
        </Table>
        
        <Pagination>
          <PageButton 
            onClick={() => setCurrentPage(p => Math.max(1, p - 1))}
            disabled={currentPage === 1}
          >
            <ChevronLeft size={16} />
          </PageButton>
          {[...Array(totalPages)].map((_, i) => (
            <PageButton 
              key={i + 1} 
              $active={currentPage === i + 1} 
              onClick={() => setCurrentPage(i + 1)}
            >
              {i + 1}
            </PageButton>
          ))}
          <PageButton 
            onClick={() => setCurrentPage(p => Math.min(totalPages, p + 1))}
            disabled={currentPage === totalPages}
          >
            <ChevronRight size={16} />
          </PageButton>
        </Pagination>
      </TableContainer>
    </>
  );

  const renderAgents = () => (
    <>
      <TopBar>
        <PageHeader>
          <PageTitle>AI Agents</PageTitle>
          <PageSubtitle>Manage your intelligent agents</PageSubtitle>
        </PageHeader>
        <Button onClick={() => setShowAgentModal(true)}>
          + Add New Agent
        </Button>
      </TopBar>
      
      <TableContainer>
        <Table>
          <thead>
            <tr>
              <Th>Title</Th>
              <Th>Type</Th>
              <Th>Version</Th>
              <Th>Actions</Th>
            </tr>
          </thead>
          <tbody>
            {paginatedAgents.map(agent => (
              <Tr key={agent.id}>
                <Td><strong>{agent.title}</strong></Td>
                <Td>{agent.type}</Td>
                <Td><StatusBadge $status="Active">v{agent.version}</StatusBadge></Td>
                <Td>
                  <ActionButtons>
                    <SmallButton title="View Details">
                      <Eye size={14} /> View
                    </SmallButton>
                    <SmallButton $variant="success" title="Add to Use Case">
                      + Add to Use Case
                    </SmallButton>
                  </ActionButtons>
                </Td>
              </Tr>
            ))}
          </tbody>
        </Table>
        
        <Pagination>
          <PageButton 
            onClick={() => setCurrentPage(p => Math.max(1, p - 1))}
            disabled={currentPage === 1}
          >
            <ChevronLeft size={16} />
          </PageButton>
          {[...Array(agentTotalPages)].map((_, i) => (
            <PageButton 
              key={i + 1} 
              $active={currentPage === i + 1} 
              onClick={() => setCurrentPage(i + 1)}
            >
              {i + 1}
            </PageButton>
          ))}
          <PageButton 
            onClick={() => setCurrentPage(p => Math.min(agentTotalPages, p + 1))}
            disabled={currentPage === agentTotalPages}
          >
            <ChevronRight size={16} />
          </PageButton>
        </Pagination>
      </TableContainer>
    </>
  );

  const renderUseCaseModal = () => (
    <Modal onClick={() => setShowUseCaseModal(false)}>
      <ModalContent onClick={(e) => e.stopPropagation()}>
        <ModalTitle>Add New Use Case</ModalTitle>
        
        <FormGroup>
          <Label>Title *</Label>
          <Input 
            value={newUseCase.title}
            onChange={(e) => setNewUseCase({...newUseCase, title: e.target.value})}
            placeholder="Enter use case title"
          />
        </FormGroup>
        
        <FormGroup>
          <Label>Description</Label>
          <TextArea 
            value={newUseCase.description}
            onChange={(e) => setNewUseCase({...newUseCase, description: e.target.value})}
            style={{ minHeight: '100px' }}
            placeholder="Describe your use case..."
          />
        </FormGroup>
        
        <FormGroup>
          <Label>Orchestra Agent</Label>
          <FileUploadButton>
            <Upload size={16} />
            Upload Agent File
            <input type="file" accept=".json,.yaml,.yml" />
          </FileUploadButton>
        </FormGroup>
        
        <FormGroup>
          <Label>Worker Agent</Label>
          <DualSelect>
            <SelectBox multiple>
              <option>Support Agent V1</option>
              <option>Sales Agent Pro</option>
              <option>HR Helper</option>
              <option>Analytics Agent</option>
            </SelectBox>
            <ArrowButtons>
              <ArrowButton>→</ArrowButton>
              <ArrowButton>←</ArrowButton>
            </ArrowButtons>
            <SelectBox multiple>
              <option>Selected Agent 1</option>
            </SelectBox>
          </DualSelect>
        </FormGroup>
        
        <FormGroup>
          <Label>Tools</Label>
          <DualSelect>
            <SelectBox multiple>
              <option>Web Search</option>
              <option>Calculator</option>
              <option>API Integration</option>
              <option>Database Query</option>
              <option>File Parser</option>
            </SelectBox>
            <ArrowButtons>
              <ArrowButton>→</ArrowButton>
              <ArrowButton>←</ArrowButton>
            </ArrowButtons>
            <SelectBox multiple>
              <option>Web Search</option>
            </SelectBox>
          </DualSelect>
        </FormGroup>
        
        <FormGroup>
          <CheckboxLabel>
            <Checkbox 
              type="checkbox" 
              checked={newUseCase.memory}
              onChange={(e) => setNewUseCase({...newUseCase, memory: e.target.checked})}
            />
            Enable Memory Field
          </CheckboxLabel>
        </FormGroup>
        
        <FormGroup>
          <Label>Service Level</Label>
          <Select 
            value={newUseCase.serviceLevel}
            onChange={(e) => setNewUseCase({...newUseCase, serviceLevel: e.target.value})}
          >
            <option value="standard">Standard</option>
            <option value="premium">Premium</option>
            <option value="enterprise">Enterprise</option>
          </Select>
        </FormGroup>
        
        <ModalActions>
          <Button $variant="danger" onClick={() => setShowUseCaseModal(false)}>
            Cancel
          </Button>
          <Button onClick={handleAddUseCase}>
            Save Use Case
          </Button>
        </ModalActions>
      </ModalContent>
    </Modal>
  );

  const renderAgentModal = () => (
    <Modal onClick={() => setShowAgentModal(false)}>
      <ModalContent onClick={(e) => e.stopPropagation()}>
        <ModalTitle>Add New Agent</ModalTitle>
        
        <FormGroup>
          <Label>Title *</Label>
          <Input 
            value={newAgent.title}
            onChange={(e) => setNewAgent({...newAgent, title: e.target.value})}
            placeholder="Enter agent title"
          />
        </FormGroup>
        
        <FormGroup>
          <Label>Description</Label>
          <TextArea 
            value={newAgent.description}
            onChange={(e) => setNewAgent({...newAgent, description: e.target.value})}
            style={{ minHeight: '100px' }}
            placeholder="Describe your agent..."
          />
        </FormGroup>
        
        <FormGroup>
          <Label>Upload Agent (GitHub)</Label>
          <FileUploadButton>
            <Upload size={16} />
            Upload from GitHub
            <input type="file" accept=".json,.yaml,.yml,.py" />
          </FileUploadButton>
        </FormGroup>
        
        <FormGroup>
          <Label>Large Language Model</Label>
          <FileUploadButton>
            <Upload size={16} />
            Upload LLM Config
            <input type="file" accept=".json,.yaml,.yml" />
          </FileUploadButton>
        </FormGroup>
        
        <FormGroup>
          <Label>Guardrails</Label>
          <DualSelect>
            <SelectBox multiple>
              <option>Content Filter</option>
              <option>PII Protection</option>
              <option>Rate Limiter</option>
              <option>Toxicity Check</option>
              <option>Fact Verification</option>
            </SelectBox>
            <ArrowButtons>
              <ArrowButton>→</ArrowButton>
              <ArrowButton>←</ArrowButton>
            </ArrowButtons>
            <SelectBox multiple>
              <option>Content Filter</option>
            </SelectBox>
          </DualSelect>
        </FormGroup>
        
        <FormGroup>
          <Label>Tools</Label>
          <DualSelect>
            <SelectBox multiple>
              <option>Web Search</option>
              <option>Database Query</option>
              <option>API Integration</option>
              <option>Code Interpreter</option>
              <option>Image Generator</option>
            </SelectBox>
            <ArrowButtons>
              <ArrowButton>→</ArrowButton>
              <ArrowButton>←</ArrowButton>
            </ArrowButtons>
            <SelectBox multiple />
          </DualSelect>
        </FormGroup>
        
        <ModalActions>
          <Button $variant="danger" onClick={() => setShowAgentModal(false)}>
            Cancel
          </Button>
          <Button onClick={handleAddAgent}>
            Save Agent
          </Button>
        </ModalActions>
      </ModalContent>
    </Modal>
  );

  return (
    <AppContainer>
      <Header $sidebarOpen={sidebarOpen}>
        <MenuButton onClick={() => setSidebarOpen(!sidebarOpen)}>
          {sidebarOpen ? <X size={24} /> : <Menu size={24} />}
        </MenuButton>
        <Logo>Envoy Platform</Logo>
      </Header>
      
      <Sidebar $open={sidebarOpen}>
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('envoy')}>
            <span>Envoy</span>
            {expandedMenus.envoy ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.envoy}>
            <SubMenuItem 
              $active={activePage === 'use-cases'} 
              onClick={() => { setActivePage('use-cases'); setCurrentPage(1); }}
            >
              Use Cases
            </SubMenuItem>
            <SubMenuItem 
              $active={activePage === 'agents'} 
              onClick={() => { setActivePage('agents'); setCurrentPage(1); }}
            >
              AI Agents
            </SubMenuItem>
            <SubMenuItem>Monitor</SubMenuItem>
          </SubMenu>
        </MenuSection>
        
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('cortex')}>
            <span>Cortex (LLM)</span>
            {expandedMenus.cortex ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.cortex}>
            <SubMenuItem>View</SubMenuItem>
            <SubMenuItem>Evaluate</SubMenuItem>
            <SubMenuItem>Monitor</SubMenuItem>
            <SubMenuItem>Guardrails</SubMenuItem>
          </SubMenu>
        </MenuSection>
        
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('tools')}>
            <span>Tools</span>
            {expandedMenus.tools ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.tools}>
            <SubMenuItem>View</SubMenuItem>
          </SubMenu>
        </MenuSection>
        
        <MenuSection>
          <MenuTitle onClick={() => toggleMenu('atlas')}>
            <span>Atlas (ML)</span>
            {expandedMenus.atlas ? <ChevronDown size={20} /> : <ChevronRight size={20} />}
          </MenuTitle>
          <SubMenu $open={expandedMenus.atlas}>
            <SubMenuItem>Use Cases</SubMenuItem>
            <SubMenuItem>Model</SubMenuItem>
            <SubMenuItem>Monitor</SubMenuItem>
          </SubMenu>
        </MenuSection>
      </Sidebar>
      
      <MainContent $sidebarOpen={sidebarOpen}>
        {activePage === 'home' && renderHome()}
        {activePage === 'use-cases' && renderUseCases()}
        {activePage === 'agents' && renderAgents()}
      </MainContent>
      
      {showUseCaseModal && renderUseCaseModal()}
      {showAgentModal && renderAgentModal()}
    </AppContainer>
  );
}

export default App;